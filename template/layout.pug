doctype html
html
	head
		- let layout = { header: true, footer: true }
		- title = ''

		block vars

		if title
			title #{title} - #{site ? site.title : ''}
		else
			title #{site ? site.title : ''}

		meta(name='keywords', content=keywords || site.keywords)
		meta(name='description', content=description || site.description)

		meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no')
		meta(name='renderer', content='webkit')

		link(rel='stylesheet', href='/public/stylesheets/style.css')
		link(rel='shortcut icon', href='/public/images/favicon.ico')

		
		
		script(type='text/javascript', src='/public/javascripts/jquery.js')
		script(type='text/javascript', src='/public/javascripts/app.js')
		script(type='text/javascript', src='/public/javascripts/index.js')
		//- script(type='text/javascript', src='/public/javascripts/stat.js')

		script(type='text/javascript', src='/public/javascripts/fthree.js')


		if site
			!= site.code.header

	body


		block content

		if layout.footer
			include lib/footer
	


	block script

	if site
		!= site.code.footer